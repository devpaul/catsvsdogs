{
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": false,
		"experimentalDecorators": true,
		"jsx": "react",
		"jsxFactory": "tsx",
		"lib": ["dom", "ES2016"],
		"module": "umd",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"outDir": "_build/",
		"removeComments": false,
		"importHelpers": true,
		"downlevelIteration": true,
		"sourceMap": true,
		"strict": true,
		"target": "es5",
		"types": ["intern"],
		"paths": {
			"catsvsdogs": ["../@types/catsvsdogs"]
		}
	},
	"include": ["./src/**/*.ts", "./tests/**/*.ts"]
}
