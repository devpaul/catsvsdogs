{
  "name": "hackersvsmatrix",
  "version": "3.0.0",
  "dependencies": {
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "gh-pages": "^2.0.1",
    "now": "~16.7.1",
    "prettier": "^1.14.3"
  },
  "scripts": {
    "build": "run-s install:client install:server build:client",
    "build:client": "cd client && npm run build:hvm && cd ..",
    "deploy:gh": "npm run build && node ./support/publish",
    "deploy:now": "now --npm --public",
    "install": "run-s install:client install:server",
    "install:client": "npm --prefix ./client install",
    "install:server": "npm --prefix ./server install",
    "pretty": "prettier --write \"client/src/**/*.ts\" \"client/tests/**/*.ts\" \"server/src/**/*.ts\" \"server/tests/**/*.ts\"",
    "start": "npm --prefix ./server run start"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "printWidth": 120,
    "arrowParens": "always"
  },
  "engines": {
    "node": "12.x"
  }
}
