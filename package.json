{
  "name": "catsvsdogs",
  "version": "4.0.0",
  "private": true,
  "devDependencies": {
    "gh-pages": "^2.0.1",
    "lerna": "^3.21.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.14.3"
  },
  "scripts": {
    "build": "lerna run build",
    "deploy:gh": "npm run build && node ./support/publish",
    "deploy:now": "now --npm --public",
    "postinstall": "lerna bootstrap",
    "pretty": "prettier --write \"packages/**/*.ts\"",
    "start": "npm --prefix ./packages/server run start"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "printWidth": 120,
    "arrowParens": "always"
  },
  "engines": {
    "node": "12.x"
  }
}
